<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starfly.admin.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="com.starfly.admin.domain.entity.Users">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="age" column="age" jdbcType="INTEGER"/>
            <result property="fullName" column="full_name" jdbcType="VARCHAR"/>
            <result property="gender" column="gender" jdbcType="OTHER"/>
            <result property="address" column="address" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="isDelete" column="del_flag" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="columns">
        id,username,email,
        age,full_name,gender,
        address,password,
        del_flag,create_time,update_time
    </sql>

    <select id="all" resultType="com.starfly.admin.domain.entity.Users">
        select
        <include refid="columns"/>
        from users
    </select>
    <select id="selectUserByUserName" parameterType="String" resultMap="BaseResultMap">
        select
        <include refid="columns"/>
        from users u
        where u.username = #{userName}
        and u.del_flag = 0
    </select>
</mapper>
